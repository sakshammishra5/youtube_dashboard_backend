# Backend Environment Configuration

# Server
PORT=5000
NODE_ENV=production

# Database
MONGODB_URI=your_mongodb_connection_string

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Production callback URL should be: https://your-render-backend-url/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# Session
SESSION_SECRET=your_secure_random_secret_key

# Frontend URL (used for CORS and redirects)
CLIENT_URL=http://localhost:5173

# For production:
# CLIENT_URL=https://your-vercel-frontend-url
